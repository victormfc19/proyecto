            background-position: right .7em top 50%, 0 0;
            background-size: .65em auto, 100%;
        }

        .select-css::-ms-expand {
            display: none;
        }

        .select-css:hover {
            border-color: rgb(124, 120, 120);
        }

        .select-css:focus {
            border-color: #aaa;
            box-shadow: 0 0 1px 3px rgb(210, 224, 248);
            box-shadow: 0 0 0 3px -moz-mac-focusring;
            color: rgb(0, 0, 0);
            outline: none;
        }

        .select-css option {
            font-weight: normal;
        }

        .button {
            /* Para posicionar los botones a la misma posición que los campos de texto */
            padding-left: 300px;
            /* mismo tamaño a todos los elementos label */
        }
        form div+div {
            margin-top: 1em;
            /*Para agregar un espacio entre cada espacio del formulario*/
        }
        button {
            /* Este margen extra representa aproximadamente el mismo espacio que el espacio
       entre los labels y sus campos de texto */
            position: absolute;
            top: 60%;
            left: 49%;
            transform: translate(-50%, -50%);
            margin-left: .5em;
            background: #FFCC29;
            color: rgb(0, 0, 0);
            font-size: 20px;
            cursor: pointer;
            border-radius: 10px;
        }
